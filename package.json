{
  "name": "@davna/davna",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "config/*",
      "modules/*",
      "services/*",
      "shared/*"
    ]
  },
  "scripts": {
    "api:down": "docker compose -f ./docker-compose.yml down",
    "api:up": "docker compose -f ./docker-compose.yml up -d",
    "rm:node_modules": "node scripts/rm.node_modules.js",
    "test:api-tsc": "node scripts/api.tsc.monitor.js",
    "test:modules": "tsnd --respawn=false --no-watch scripts/run.command.ts modules test",
    "typecheck": "tsc --noEmit"
  },
  "author": {
    "name": "Yago Marinho",
    "email": "marinho.rj2@hotmail.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yagomarinho/davna.git"
  },
  "dependencies": {
    "@davna/core": "*",
    "dotenv": "^17.2.3",
    "yup": "^1.7.1"
  },
  "devDependencies": {
    "@davna/eslint": "*",
    "@davna/jest": "*",
    "@types/node": "^24.5.2",
    "esbuild": "^0.27.0",
    "rimraf": "^6.1.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5"
  }
}
